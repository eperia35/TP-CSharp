@model TpDojo.Entities.Arme

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center">Modification d'une arme : @Html.Raw(Model.Nom)</h2>
<hr />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-inline row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_ArmesCreateEdit", Model)

        <div class="col-md-12 mt25 text-center">
            <input type="submit" value="Sauvegarder" class="btn btn-success" />
            @Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
